<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_splashscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UnusedIds">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_screen_background_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_screen_glow" />

    <ImageView
        android:layout_width="@dimen/splash_screen_width"
        android:layout_height="@dimen/splash_screen_height"
        android:layout_gravity="center"
        android:src="@drawable/splash_screen_logo" />
</FrameLayout>
