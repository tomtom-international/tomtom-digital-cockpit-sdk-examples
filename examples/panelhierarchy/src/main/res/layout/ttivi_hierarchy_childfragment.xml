<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.ivi.example.panelhierarchy.child.HierarchyChildViewModel" />

        <variable
            name="iviFragmentId"
            type="com.tomtom.ivi.platform.frontend.api.common.frontend.IviFragmentId" />
    </data>

    <LinearLayout
        android:id="@+id/frontend_hierarchy_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

        <com.tomtom.tools.android.api.uicontrols.navigationbar.TtNavigationBar
            android:id="@id/tt_navigationbar"
            style="?attr/tt_navigationbar_style"
            auto:layout_constraintStart_toStartOf="parent"
            auto:layout_constraintTop_toTopOf="parent"
            auto:ttViewModel="@{viewModel.getNavigationBarViewModel(iviFragmentId)}" />

        <com.tomtom.tools.android.api.uicontrols.textview.TtTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/tt_spacing_16"
            android:gravity="start"
            android:text="@{viewModel.selectedItem}"
            android:textAlignment="textStart"
            android:textAppearance="?attr/tt_headline_text_style_m"
            android:textColor="?attr/tt_surface_content_color_emphasis_high" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="?attr/tt_spacing_8" />

        <com.tomtom.tools.android.api.uicontrols.button.TtButton
            style="?attr/tt_button_style"
            android:layout_width="match_parent"
            android:onClick="@{() -> viewModel.onGoToChildClick(viewModel.children[0])}"
            android:text="@{viewModel.children[0].buttonStringResolver}"
            auto:ttActionType="primary" />

    </LinearLayout>

</layout>
