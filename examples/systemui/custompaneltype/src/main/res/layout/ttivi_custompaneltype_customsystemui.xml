<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.ivi.example.systemui.custompaneltype.systemui.CustomSystemUiViewModel" />
        <variable
            name="panelRegistry"
            type="com.example.ivi.example.systemui.custompaneltype.systemui.CustomPanelRegistry" />

        <variable
            name="panelContainerContext"
            type="com.tomtom.ivi.platform.systemui.api.common.systemuihost.panelcontainer.PanelContainerContext" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.tomtom.ivi.platform.systemui.api.common.systemuihost.panelcontainer.SinglePanelContainer
            android:id="@+id/example_systemui_custompanel_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            auto:ttiviPanelContainerContext="@{panelContainerContext}"
            auto:ttiviPanelContainerData="@{viewModel.customPanel}" />

        <com.tomtom.ivi.platform.systemui.api.common.systemuihost.panelcontainer.SinglePanelContainer
            android:id="@+id/example_systemui_menu_container"
            android:layout_width="?attr/ttivi_mainmenu_panel_size"
            android:layout_height="match_parent"
            auto:ttiviPanelContainerContext="@{panelContainerContext}"
            auto:ttiviPanelContainerData="@{viewModel.menuPanel}" />

        <com.tomtom.ivi.platform.systemui.api.common.systemuihost.panelcontainer.TaskPanelContainer
            android:id="@+id/example_systemui_task_panel_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="800dp"
            auto:ttiviPanelContainerContext="@{panelContainerContext}"
            auto:ttiviPanelContainerData="@{panelRegistry.iviPanelRegistry.taskPanelStackData}" />
    </LinearLayout>
</layout>
